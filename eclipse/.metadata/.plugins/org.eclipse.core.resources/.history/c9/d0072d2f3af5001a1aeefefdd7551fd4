package de.devjava.playshot.addon.utils;

import net.minecraft.util.EnumChatFormatting;

public enum CC
{

	WHITE(16777215, EnumChatFormatting.WHITE), SILVER(12632256, EnumChatFormatting.GRAY), GRAY(8421504, EnumChatFormatting.DARK_GRAY), BLACK(0, EnumChatFormatting.BLACK), RED(16711680, EnumChatFormatting.RED), MAROON(8388608, EnumChatFormatting.DARK_RED), YELLOW(16776960, EnumChatFormatting.YELLOW), OLIVE(8421376, EnumChatFormatting.LIGHT_PURPLE), LIME(65280, EnumChatFormatting.GREEN), GREEN(32768, EnumChatFormatting.DARK_GREEN), AQUA(65535, EnumChatFormatting.AQUA), TEAL(32896, EnumChatFormatting.BLUE), BLUE(255, EnumChatFormatting.DARK_BLUE), NAVY(128, EnumChatFormatting.GREEN), FUCHSIA(16711935, EnumChatFormatting.LIGHT_PURPLE), PURPLE(8388736, EnumChatFormatting.DARK_PURPLE), ORANGE(16753920, EnumChatFormatting.GOLD);  
	
	private int color;
	private EnumChatFormatting enumChatFormatting;
	
	private CC(int color, EnumChatFormatting enumChatFormatting)
	{
		this.color = color;
		this.enumChatFormatting = enumChatFormatting;
	}
	
	public int getColor()
	{
		return color;
	}

	public EnumChatFormatting getChatColor()
	{
		return null;
	}
}
